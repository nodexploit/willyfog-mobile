<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="72dp"
    android:padding="8dp">

    <ImageView
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:id="@+id/uniImg"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/uniName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/uniImg"
        android:layout_toEndOf="@+id/uniImg"
        android:layout_marginLeft="16dp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/date"
        android:maxLines="1"
        android:nestedScrollingEnabled="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Small Text"
        android:id="@+id/date"
        android:layout_alignTop="@+id/uniName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Large Text"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/uniImg"
        android:layout_alignLeft="@+id/uniName"
        android:layout_alignStart="@+id/uniName"
        android:layout_marginBottom="6dp"
        android:nestedScrollingEnabled="true"
        android:maxLines="1" />

</RelativeLayout>