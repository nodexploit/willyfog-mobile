<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:padding="10dp">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:id="@+id/element_university_img"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
        android:text="Large Text"
        android:id="@+id/element_university_name"
        android:layout_alignTop="@+id/element_university_img"
        android:layout_toRightOf="@+id/element_university_img"
        android:layout_toEndOf="@+id/element_university_img"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="6dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Grado : "
        android:id="@+id/element_aux_textView"
        android:layout_below="@+id/element_university_img"
        android:layout_toRightOf="@+id/button2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="4dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Medium Text"
        android:id="@+id/element_degree_name"
        android:layout_alignBottom="@+id/element_aux_textView"
        android:layout_toRightOf="@+id/element_aux_textView"
        android:layout_toEndOf="@+id/element_aux_textView"
        android:textStyle="bold|italic"
        android:singleLine="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Asignatura : "
        android:id="@+id/element_aux_textView2"
        android:layout_below="@+id/element_aux_textView"
        android:layout_alignLeft="@+id/element_aux_textView"
        android:layout_alignStart="@+id/element_aux_textView"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        android:text="Medium Text"
        android:id="@+id/element_subject_name"
        android:layout_alignBottom="@+id/element_aux_textView2"
        android:layout_toRightOf="@+id/element_aux_textView2"
        android:layout_toEndOf="@+id/element_aux_textView2"
        android:textStyle="bold"
        android:singleLine="true" />

    <Button
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/element_university_img"
        android:background="@mipmap/ic_send_request" />

</RelativeLayout>