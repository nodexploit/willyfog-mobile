<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorBackground">


    <ImageView
        android:layout_width="160dp"
        android:layout_height="200dp"
        android:id="@+id/profileImageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/nameTextView"
        android:layout_alignTop="@+id/profileImageView"
        android:layout_toRightOf="@+id/profileImageView"
        android:layout_toEndOf="@+id/profileImageView"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:typeface="serif" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/matriculada_en"
        android:id="@+id/auxTextView"
        android:layout_below="@+id/nameTextView"
        android:layout_toRightOf="@+id/profileImageView"
        android:layout_toEndOf="@+id/profileImageView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/gradeTextView"
        android:layout_below="@+id/auxTextView"
        android:layout_toRightOf="@+id/profileImageView"
        android:layout_toEndOf="@+id/profileImageView"
        android:typeface="serif" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:background="@mipmap/ic_launcher"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:layout_alignBottom="@+id/profileImageView"
        android:layout_alignRight="@+id/profileImageView"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="9dp"/>



    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/listView"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/profileImageView" />




</RelativeLayout>